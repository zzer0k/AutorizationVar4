<Page x:Class="AutorizationVar4.PodskazkaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutorizationVar4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PodskazkaPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите табельный номер"/>
            <TextBox Name="inputLogin"/>
            <Label Content="Введите фио"/>
            <TextBox Name="inputfio"/>
            <Label Content="Введите должность"/>
            <TextBox Name="inputPosition"/>
            <Label Content="Введите дату трудоустройтва"/>
            <TextBox Name="inputDate"/>
            <Button Click="Proverka" Content="Выдать пароль" Width="150" Margin="5,10"/>
        </StackPanel>
    </Grid>
</Page>
